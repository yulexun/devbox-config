{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "act@latest",
    "envsubst@latest",
    "gh@latest",
    "go-task@latest",
    "go@latest",
    "gum@latest",
    "jq@latest",
    "k9s@latest",
    "kind@latest",
    "kluctl@latest",
    "ko@latest",
    "kubectl@latest",
    "kubectx@latest",
    "kubent@latest",
    "kubernetes-helm@latest",
    "kustomize@latest",
    "nodejs_20@latest",
    "oras@latest",
    "poetry@latest",
    "python312@latest",
    "tilt@latest",
    "yq-go@latest",
    "procps@latest"
  ],
  "shell": {
    "init_hook": [
      "export GOBIN=$(git rev-parse --show-toplevel)/bin",
      "export PATH=$GOBIN:$PATH",
      "alias k=kubectl",
      "alias t=task",
      "alias tl='task --list-all'"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
